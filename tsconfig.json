{
  "compilerOptions": {
    "module": "ESNext",
    "baseUrl": ".",
    "declaration": true,
    "outDir": "dist",
    "paths": {
      "*": [
        "*",
        "dist/*"
      ]
    },
    "target": "ES5",
    "lib": [
      "es2017",
      "es2018.promise",
      "es2019"
    ],
    "strict": true,
    "moduleResolution": "Node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "./src/**/*.spec.ts"
  ],
  "typeRoots": [
    "../node_modules/@types"
  ]
}
